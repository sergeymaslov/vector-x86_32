[transforms.remove_fields]
title = "Remove Fields"
allow_you_to_description = "remove one or more log fields"
beta = false
common = false
function_category = "schema"
input_types = ["log"]
output_types = ["log"]
requirements = {}

<%= render("_partials/fields/_component_options.toml", type: "transform", name: "remove_fields") %>

[transforms.remove_fields.options.fields]
type = "[string]"
common = true
examples = [["field1", "field2", "parent.child"]]
field_path_notation = true
required = true
description = "The log field names to drop."

[transforms.remove_fields.options.drop_empty]
type = "bool"
required = false
default = false
description = "If set to `true`, after removing fields, remove any parent objects that are now empty."
