# Always validate the PR title, and ignore the commits
titleOnly: true

types:
  - chore               # An internal change this is not observable by users.
  - docs                # Any user observable documentation change.
  - enhancement         # Any user observable enhancement to an existing feature.
  - feat                # Any user observable new feature, such as a new platform, source, transform, or sink.
  - fix                 # Any user observable bug fix.
  - perf                # Any user observable performance improvment.
  - status              # A status change to a Vector component.

scopes:

  - new source
  - new transform
  - new sink

  # domains
  <%- metadata.domains.each do |domain| -%>
  - <%= domain.name.downcase %>
  <%- end -%>

  # platforms
  <%- metadata.platform_names.each do |platform|  -%>
  - <%= platform.downcase %> platform
  <%- end -%>

  # providers
  <%- metadata.service_providers.each do |service_provider| -%>
  - <%= service_provider.downcase %> provider
  <%- end -%>

  # sources
  <%- metadata.sources.to_h.values.sort.each do |source| -%>
  - <%= source.name.downcase %> source
  <%- end -%>

  # transforms
  <%- metadata.transforms.to_h.values.sort.each do |transform| -%>
  - <%= transform.name.downcase %> transform
  <%- end -%>

  # sinks
  <%- metadata.sinks.to_h.values.sort.each do |sink| -%>
  - <%= sink.name.downcase %> sink
  <%- end -%>
