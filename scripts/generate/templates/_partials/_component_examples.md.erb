<%- examples = component.examples -%>
<%- if examples.size > 1 -%>
<%- style = examples.collect(&:label).join.length > 50 ? "select" : "block" -%>
<Tabs
  block={<%= (style == "block").to_json %>}
  defaultValue="<%= examples.first.label.slugify %>"
  select={<%= (style == "select").to_json %>}
  values={<%= examples.collect { |e| {label: e.label, value: e.label.slugify} }.to_json %>}>
<%- end -%>
<%- examples.each do |example| -%>
<%- if examples.size > 1 -%>

<TabItem value="<%= example.label.slugify %>">
<%- end -%>

<%= example.body %>
<%- if examples.size > 1 -%>

</TabItem>
<%- end -%>
<%- end -%>
<%- if examples.size > 1 -%>
</Tabs>
<%- end -%>
