<%- if opts[:path] -%>
<% if opts[:array] %>[[<%= opts[:path] %>]]<% else %>[<%= opts[:path] %>]<% end %>
<%- end -%>
<%- spec.grouped.each do |title, options| -%>
  <%- if spec.grouped.length > 1 -%>
  <%- if opts[:titles] -%>
  #
  # <%= title %>
  #
  <%- end -%>

  <%- end -%>
  <%- options.each do |option| -%>
    <%- if option.array_of_objects? -%>
<%= config_spec(option.children_list, titles: false, path: "#{opts[:path]}.#{option.name}", array: true).indent(2) %>
    <%- elsif option.object? -%>
<%= config_spec(option.children_list, titles: false, path: "#{opts[:path]}.#{option.name}").indent(2) %>
    <%- else -%>
<%= option.description.editorify(78).commentify.indent(2) %>
      <%- option_tags(option, example: false).each do |tag| -%>
  # * <%= tag %>
      <%- end -%>
      <%- option.examples.each do |example| -%>
        <%- if example.is_a?(Hash) -%>
<%= example.to_toml.indent(2) %>
        <%- else -%>
  <%= option.name %> = <%= example.to_toml %>
        <%- end -%>
      <%- end -%>
    <%- end %>
  <%- end -%>
<%- end -%>
